extends ./layout.pug
block content
    div.row
        div.col
            form(action="/user" method="POST")
            div.form-group
                label(for="name") Nombre
                input(type="text" name="name" class="form-control")
            div.form-group
                label(for="last_name") Apellido
                input(type="text" name="last_name" class="form-control")
            div.form-group
                label(for="lunch") Ultima vez que calent√≥
                input(type="date", name="lunch" class="form-control")
            div.form-group
                label(for="benefits") Beneficios
                input(type="number", name="benefits" class="form-control")
            input(type="submit", value="Enviar"  class="btn btn-info")